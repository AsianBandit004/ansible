terraform {
    required_providers {
        proxmox = {
            source = "telmate/proxmox"
        }
    }
}

provider "proxmox" {
    pm_api_url          = "https://YOURIPORDNSNAMEHERE:8006/api2/json"
    pm_api_token_id     = "YOURTOKENIDFROMPROXMOXHERE"
    pm_api_token_secret = "YOURSECRETFROMPROXMOXHERE"
    pm_tls_insecure     = true
}

resource "proxmox_vm_qemu" "vm-instance" {
    name                = "vm-instance"
    target_node         = "NAMEOFYOURPROXMOXNODE"
    clone               = "NAMEOFYOURVMTEMPLATE"
    full_clone          = true
    cores               = 2
    memory              = 2048

    disk {
        size            = "10G"
        type            = "scsi"
        storage         = "YOURLOCALORSTORAGEHERE"
        discard         = "on"
    }

    network {
        model     = "virtio"
        bridge    = "vmbr0"
        firewall  = false
        link_down = false
    }

}
